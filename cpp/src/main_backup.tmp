#include "pop_data.h"
#include <iostream>
#include "argparse.hpp"
#include <string>
#include <vector>
#include <iostream>







int main(int argc, char** argv) {
    argparse::ArgumentParser program("POPout");

    program.add_argument("--out")
        .help("Output prefix")
        .default_value(std::string("popout"));


    // positional #1+ (one or more popfiles)
    program.add_argument("popfiles")
        .help("One or more popfiles")
        .nargs(1, -1);

    try {
        program.parse_args(argc, argv);
    } catch (const std::exception& e) {
        std::cerr << e.what() << "\n" << program;
        return 1;
    }

    const std::string out = program.get<std::string>("--out");
    const std::vector<std::string> popfiles =
        program.get<std::vector<std::string>>("popfiles");

    // now: out, arg1, popfiles.size() >= 1
}







